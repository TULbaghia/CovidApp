<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".map.MapFragment"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/countyInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="261dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/orangeZoneButton"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/countyInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/countyTitleTextView"
            app:layout_constraintVertical_bias="0.093" />

        <TextView
            android:id="@+id/countyTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="TextView"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.464"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/legendTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:text="@string/map_legend"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/map"
        app:layout_constraintTop_toBottomOf="@+id/map" />

    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<!--    <WebView-->
<!--        android:id="@+id/webView"-->
<!--        android:layout_width="377dp"-->
<!--        android:layout_height="300dp"-->
<!--        android:layout_marginTop="16dp"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent" />-->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/greenZoneButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:clickable="true"
        app:backgroundTint="@color/green"
        app:layout_constraintBottom_toBottomOf="@+id/legendTextView"
        app:layout_constraintStart_toEndOf="@+id/legendTextView"
        app:layout_constraintTop_toTopOf="@+id/legendTextView" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/orangeZoneButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:clickable="true"
        app:backgroundTint="@color/orange"
        app:layout_constraintStart_toEndOf="@+id/greenZoneButton"
        app:layout_constraintTop_toTopOf="@+id/greenZoneButton" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/redZoneButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:clickable="true"
        app:backgroundTint="@color/red"
        app:layout_constraintStart_toEndOf="@+id/orangeZoneButton"
        app:layout_constraintTop_toTopOf="@+id/orangeZoneButton" />

</androidx.constraintlayout.widget.ConstraintLayout>